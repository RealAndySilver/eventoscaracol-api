		script(type='text/javascript').
			function start_timer(seconds,div_id){
				
				var seconds=seconds;
				var minutes= Math.floor(seconds/(1000*60));
				var hours= Math.floor(seconds/(1000*60*60));
				var days= Math.floor(seconds/(1000*60*60*24));
				var counter=setInterval(timer, 1000);
				var dotcounter=0;
				var dots=".";
				
				function span(color,size,text){
					return '<span style="font-size:'+size+'; color:'+color+';">'+text+'</span>';
				}
				
				function timer(){
					seconds=seconds-1;
					minutes= Math.floor(seconds/(60));
					hours= Math.floor(seconds/(60*60));
					days= Math.floor(seconds/(60*60*24));
					
					var sec_num = parseInt(seconds, 10); 
					var final_days = Math.floor(sec_num / (60*60*24));
					var final_hours   = Math.floor(sec_num / 3600);
					var final_minutes = Math.floor((sec_num - (final_hours * 3600)) / 60);
					var final_seconds = sec_num - (final_hours * 3600) - (final_minutes * 60);
					final_hours=final_hours%24;
					
					if (final_days   < 10){
						final_days   = "0"+final_days;
					}
					if (final_hours   < 10){
						final_hours   = "0"+final_hours;
					}
					if (final_minutes < 10){
						final_minutes = "0"+final_minutes;
					}
					if (final_seconds < 10){
						final_seconds = "0"+final_seconds;
					}
					var time    = final_days
								+span('#440000','18px',' Days ')
								+final_hours
								+span('rgb(212,177,91)','18px',' Hours ')
								+final_minutes
								+span('rgb(179,224,221)','18px',' Minutes ')
								+final_seconds
								+span('rgb(219,229,130)','18px',' Seconds');
					
					if (seconds <= 0){
						clearInterval(counter);
						return;
					}
					/*document.getElementById("seconds").innerHTML=seconds;
					document.getElementById("minutes").innerHTML=seconds%2 ? minutes+"-":minutes+":";
					document.getElementById("hours").innerHTML=seconds%2 ? hours+"-":hours+":";
					document.getElementById("days").innerHTML=days;*/
					document.getElementById(div_id).innerHTML=time;
					
					if(dotcounter<2){
						dots+=".";
						dotcounter+=1;
					}
					else{
						dots=".";
						dotcounter=0;
					}
					divs = document.getElementsByClassName( 'dots' );
					[].slice.call( divs ).forEach(function ( div ) {
						div.innerHTML = " "+dots;
					});
					
				}
			}
