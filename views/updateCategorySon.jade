include head
#login_container
	#logo 
		img(src="../../../../images/logo_caracol.png", width="220px", height="200px")
	#form_container
		form(method='post',action='/UpdateCategorySon', name="form", enctype="multipart/form-data")
			fieldset(style="width:230px;")
				legend Información
				label(for='name') Título ó Nombre del Item que será actualizado para la categoría; 
				span(style="color:#ff0c8a; font-size:30px;") #{categoryfather.name}
				p
				input(class="input_textfield",type='text',name='name',id='name',value="#{category.name}")
			p
			fieldset(style="width:230px;")
				//legend Prioridad
				p
				label(for='priority') Prioridad: 
					select(name="priority", style="width:100px;")
						-for(var i=1; i<21; i++)
							-if(i==category.priority)
								option(value="#{i}", selected="selected") #{i}
							-else
								option(value="#{i}") #{i}
				p
				div(style="font-style:italic;font-size:12px; color:#ff0cb2;") Para mantener el orden ideal, evita asignar a dos items el mismo número de prioridad.	
			p
			input(type='hidden',name='app_id',id='app_id',value='#{app._id}')
			input(type='hidden',name='app_name',id='app_name',value='#{app.name}')
			input(type='hidden',name='admin_id',id='admin_id',value='#{admin._id}')
			input(type='hidden',name='category_id',id='category_id',value='#{category._id}')
			input(type='hidden',name='categoryfather_id',id='categoryfather_id',value='#{categoryfather._id}')			
			p
			input(type='submit',name='submit',value='Actualizar')
			input(type='button',name='cancel',value='Cancelar')
			p
			.errorText #{error}
			script.
				var btn = document.forms['form'].elements["cancel"];
				btn.onclick = function(){
					window.history.back(-1);
				};
